{deps,
 [
  % {eredis_cluster, {git, "https://github.com/emqx/eredis_cluster", {tag, "v0.6.1"}}},
  % {ecpool, {git, "https://github.com/emqx/ecpool", {tag, "v0.4.2"}}},
  % {emqx_passwd, {git, "https://github.com/emqx/emqx-passwd", {tag, "v1.0"}}}
 ]}.

{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            compressed
           ]}.
{overrides, [{add, [{erl_opts, [compressed]}]}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions
              ]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.